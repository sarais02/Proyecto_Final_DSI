<Page
    x:Class="ProyectoDSI.Reglamento"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoDSI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="TextStyle">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontFamily" Value="MV Boli"/>
        </Style>
    </Page.Resources>


    <Grid Background="LightPink">

        <TextBlock VerticalAlignment="Top"
                   Text="REGLAMENTO" 
                   HorizontalAlignment="Center"
                   FontSize="70"
                   Margin="0,44,0,0"
                   Foreground="Gold" FontFamily="Bauhaus 93" Height="102" Width="404" Grid.Column="1"/>
        <TextBlock VerticalAlignment="Top"
                   Text="REGLAMENTO" 
                   HorizontalAlignment="Center"
                   FontSize="70"
                   Margin="0,40,0,0"
                   Foreground="HotPink" FontFamily="Bauhaus 93" 
                   Height="102" Width="404" />



        <Image x:ConnectionId='2' Source="../Assets/back.png" Width="50" Height="50"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               Margin="35,60,0,0"
                                                     
                                                       
                                                        
               x:Name="BackImage"/>

        <TextBlock x:ConnectionId='3' Text="Back" Foreground="HotPink" FontSize="30"
                   Margin="70,65,40,28"
                   Visibility="Collapsed"
                   x:Name="SpecialText"/>


        <Grid Margin="80,150,0,40">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="189*"/>
                <ColumnDefinition Width="168*"/>
                <ColumnDefinition Width="201*"/>
                <ColumnDefinition Width="420*"/>
                <ColumnDefinition Width="442*"/>
            </Grid.ColumnDefinitions>


            <Border Background="MediumVioletRed" Grid.ColumnSpan="4"/>
            <Border Background="Gold" Grid.ColumnSpan="4" Grid.Row="1"/>
            <Border Background="Gold" Grid.ColumnSpan="4" Grid.Row="3"/>
            <Border Background="Gold" Grid.ColumnSpan="4" Grid.Row="5"/>
            <Border Background="Gold" Grid.ColumnSpan="4" Grid.Row="7"/>
            <Border Background="Gold" Grid.ColumnSpan="4" Grid.Row="9"/>
            <Border Background="HotPink" Grid.ColumnSpan="4" Grid.Row="2"/>
            <Border Background="HotPink" Grid.ColumnSpan="4" Grid.Row="4"/>
            <Border Background="HotPink" Grid.ColumnSpan="4" Grid.Row="6"/>
            <Border Background="HotPink" Grid.ColumnSpan="4" Grid.Row="8"/>



            <TextBlock Text="Personaje" VerticalAlignment="Center"
                           HorizontalAlignment="Center" FontSize="30" Height="40" Width="127"/>
            <TextBlock Text="Rango" VerticalAlignment="Center"
                           HorizontalAlignment="Center" FontSize="30"
                           Grid.Column="1" Height="40" Width="85"/>
            <TextBlock Text="Cantidad" VerticalAlignment="Center"
                           HorizontalAlignment="Center" FontSize="30"
                           Grid.Column="2" Height="40" Width="119"/>
            <TextBlock Text="Habilidad Especial" VerticalAlignment="Center"
                           HorizontalAlignment="Center" FontSize="30"
                           Grid.Column="3" Height="40" Width="240"/>

            <Image Source="../Assets/Regaliz.png" Grid.Row="1"/>
            <Image Source="../Assets/Baston.png" Grid.Row="2"/>
            <Image Source="../Assets/Dedo.png" Grid.Row="3"/>
            <Image Source="../Assets/Huevo.png" Grid.Row="4"/>
            <Image Source="../Assets/Sandia.png" Grid.Row="5"/>
            <Image Source="../Assets/Cocacola.png" Grid.Row="6"/>
            <Image Source="../Assets/BombaSandia.png" Grid.Row="7"/>
            <Image Source="../Assets/Petazeta.png" Grid.Row="8"/>
            <Image Source="../Assets/Fresa.png" Grid.Row="9"/>

            <TextBlock Text="7" Style="{StaticResource TextStyle}" Grid.Column="1" Grid.Row="1"/>
            <TextBlock Text="6" Style="{StaticResource TextStyle}" Grid.Column="1" Grid.Row="2"/>
            <TextBlock Text="5" Style="{StaticResource TextStyle}" Grid.Column="1" Grid.Row="3"/>
            <TextBlock Text="4" Style="{StaticResource TextStyle}" Grid.Column="1" Grid.Row="4"/>
            <TextBlock Text="3" Style="{StaticResource TextStyle}" Grid.Column="1" Grid.Row="5"/>
            <TextBlock Text="2" Style="{StaticResource TextStyle}" Grid.Column="1" Grid.Row="6"/>
            <TextBlock Text="1" Style="{StaticResource TextStyle}" Grid.Column="1" Grid.Row="7"/>
            <TextBlock Text="B" Style="{StaticResource TextStyle}" Grid.Column="1" Grid.Row="8"/>
            <TextBlock Text="F" Style="{StaticResource TextStyle}" Grid.Column="1" Grid.Row="9"/>

            <TextBlock Text="1" Style="{StaticResource TextStyle}" Grid.Column="2" Grid.Row="1"/>
            <TextBlock Text="2" Style="{StaticResource TextStyle}" Grid.Column="2" Grid.Row="2"/>
            <TextBlock Text="3" Style="{StaticResource TextStyle}" Grid.Column="2" Grid.Row="3"/>
            <TextBlock Text="4" Style="{StaticResource TextStyle}" Grid.Column="2" Grid.Row="4"/>
            <TextBlock Text="4" Style="{StaticResource TextStyle}" Grid.Column="2" Grid.Row="5"/>
            <TextBlock Text="8" Style="{StaticResource TextStyle}" Grid.Column="2" Grid.Row="6"/>
            <TextBlock Text="1" Style="{StaticResource TextStyle}" Grid.Column="2" Grid.Row="7"/>
            <TextBlock Text="6" Style="{StaticResource TextStyle}" Grid.Column="2" Grid.Row="8"/>
            <TextBlock Text="1" Style="{StaticResource TextStyle}" Grid.Column="2" Grid.Row="9"/>

            <TextBlock Text="-" Style="{StaticResource TextStyle}" Grid.Column="3" Grid.Row="1"/>
            <TextBlock Text="-" Style="{StaticResource TextStyle}" Grid.Column="3" Grid.Row="2"/>
            <TextBlock Text="-" Style="{StaticResource TextStyle}" Grid.Column="3" Grid.Row="3"/>
            <TextBlock Text="-" Style="{StaticResource TextStyle}" Grid.Column="3" Grid.Row="4"/>
            <TextBlock Text="Desativa las ptazetas" Style="{StaticResource TextStyle}" Grid.Column="3" Grid.Row="5"/>
            <TextBlock Text="Puede moverse en cualquier distancia" Style="{StaticResource TextStyle}" Grid.Column="3" Grid.Row="6"/>
            <TextBlock Text="Mata al regaliz" Style="{StaticResource TextStyle}" Grid.Column="3" Grid.Row="7" TextWrapping="Wrap"/>
            <TextBlock Text="No se mueve. Mata a las sandias" Style="{StaticResource TextStyle}" Grid.Column="3" Grid.Row="8"/>
            <TextBlock Text="El juego se gana/pierde si es capturada" Style="{StaticResource TextStyle}" Grid.Column="3" Grid.Row="9"/>

            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center"
                    Grid.Column="4" Grid.RowSpan="10" Background="DeepPink" CornerRadius="30"
                        Margin="20,0,10,0">
                <TextBlock Text=" "/>
                <TextBlock Text="-Cada Turno dura 1 minuto y 30 segundos." Style="{StaticResource TextStyle}" Foreground="White"/>
                <TextBlock Text="-Solo se puede mover una ficha por minuto." Style="{StaticResource TextStyle}" Foreground="White"/>
                <TextBlock Text="-Si al acabar el tiempo por turno no se ha movido la ficha, se moverá una aleatoriamente." Style="{StaticResource TextStyle}" Foreground="White"/>
                <TextBlock Text="-Se produce un combate cuando 2 fichas de bandos opuestos se encuentran en la misma casilla." Style="{StaticResource TextStyle}" Foreground="White"/>
                <TextBlock Text="-Al producirse un combate, el que tenga mayor rango o una habilidad superior, gana." Style="{StaticResource TextStyle}" Foreground="White"/>
                <TextBlock Text="-Al producirse un combate, la ficha vencida desaparece y cede la casilla a la ganadora." Style="{StaticResource TextStyle}" Foreground="White"/>
                <TextBlock Text=" "/>
            </StackPanel>
        </Grid>

    </Grid>
</Page>

