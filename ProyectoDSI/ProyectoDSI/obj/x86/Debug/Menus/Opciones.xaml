<Page
    x:Class="ProyectoDSI.Opciones"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoDSI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:ConnectionId='2' TargetType="Slider" x:Name="slidersUI">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Yellow"/>
            <Setter Property="Foreground" Value="Orange"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="Value" Value="50"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="50"/>
        </Style>
        <Style x:ConnectionId='3' TargetType="StackPanel" x:Name="optionstackPanel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Spacing" Value="40"/>
            <Setter Property="Width" Value="650"/>
            <Setter Property="Height" Value="90"/>
            <Setter Property="Orientation" Value="Horizontal"/>
        </Style>
    </Page.Resources>
    <Grid x:ConnectionId='4' Background="#f6a2bf"                        >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>

        <Image x:ConnectionId='5' Source="../Assets/back.png" Width="50" Height="50"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               Margin="35,60,0,0"
                                                        
                                                      
                                                        
               x:Name="BackImage"/>
        <TextBlock x:ConnectionId='6' Text="Back" Foreground="HotPink" FontSize="30"
                   Margin="70,65,40,28"
                   Visibility="Collapsed"
                   x:Name="SpecialText"/>

        <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="-10,50,0,0">
            <TextBlock 
                VerticalAlignment="Center"
                   Text="OPCIONES"                  
                   FontSize="70"
                   Margin="150,44,0,0"
                   Foreground="Gold" FontFamily="Bauhaus 93" Height="102" Width="404" Grid.Column="1" />
            <TextBlock 
                Text="OPCIONES"                 
                FontSize="70"
                Foreground="HotPink" FontFamily="Bauhaus 93" 
                Height="102" Width="404" Margin="146,44,4,0"  />
        </Grid>
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Stretch"
                    Spacing="50" Height="400" Width="700" Grid.Column="1" >

            <StackPanel Style="{StaticResource optionstackPanel}" >
                <TextBlock x:ConnectionId='9' VerticalAlignment="Center" Text="Volumen" FontSize="30" Foreground="HotPink"
                           FontWeight="Bold" FontFamily="Fascinate Inline"                                              />
                <Slider Style="{StaticResource slidersUI}" />
                <SymbolIcon Symbol="Audio" Foreground="DeepPink"/>
            </StackPanel>
            <StackPanel Style="{StaticResource optionstackPanel}" >
                <TextBlock VerticalAlignment="Center" Text="Brillo" FontSize="30" Foreground="HotPink"
                           FontWeight="Bold" FontFamily="Fascinate Inline" />
                <Slider Style="{StaticResource slidersUI}" />
                <SymbolIcon Symbol="Audio" Foreground="DeepPink"/>
            </StackPanel>
            <StackPanel Style="{StaticResource optionstackPanel}">
                <TextBlock VerticalAlignment="Center" Text="Lenguaje" FontSize="30" Foreground="HotPink"
                           FontWeight="Bold" FontFamily="Fascinate Inline" />
                <ComboBox PlaceholderText="Selecciona Un Idioma" 
                          Width="200"
                          VerticalAlignment="Center">
                    <x:String>Español</x:String>
                    <x:String>Ingles</x:String>
                </ComboBox>
            </StackPanel>
        </StackPanel>
        <Image  Grid.Column="0" Source="../Assets/nuve.png"  Stretch="Uniform"/>
        <Image  Grid.Column="2" Source="../Assets/nuve.png"  Stretch="Uniform" FlowDirection="RightToLeft"/>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,500,0,0" HorizontalAlignment="Center" Spacing="40" >

            <Button x:ConnectionId='7' x:Name="Reglas"  FontSize="30" VerticalAlignment="Center"
                Height="96" Width="209"  CornerRadius="50" Background="Transparent"
                                     FontFamily="MV Boli">
                <Image Source="../Assets/botonReglamento.png" AutomationProperties.Name="slice" Stretch="Fill" Margin="-10,-6,-10,-7"/>
            </Button>
            <Button x:ConnectionId='8' x:Name="Pause"  FontSize="30"   VerticalAlignment="Center"               
                Height="96" Width="209" FontFamily="MV Boli" Background="Transparent"
                 CornerRadius="50"                    >
                <Image Source="../Assets/botoncontroles.png" Stretch="Fill" Margin="-10,-6,-10,-7"/>
            </Button>

        </StackPanel>
        
    </Grid>
</Page>

