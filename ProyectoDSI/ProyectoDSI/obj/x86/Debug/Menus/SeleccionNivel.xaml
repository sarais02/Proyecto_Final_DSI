<Page
    x:Class="ProyectoDSI.SeleccionNivel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoDSI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
   RequestedTheme="Light">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ButtonBackground" Color="Red"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="DarkRed"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Tomato"/>
                    <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
                    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="LightSalmon"/>
                    <SolidColorBrush x:Key="ButtonForegroundDisabled" Color="White"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="357*"/>
            <ColumnDefinition Width="530*"/>
            <ColumnDefinition Width="613*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="213*"/>
            <RowDefinition Height="74*"/>
            <RowDefinition Height="213*"/>
        </Grid.RowDefinitions>

        <!--IMAGEN DE FONDO-->
        <Image Source="../Assets/Plano.jpg" Stretch="Fill" Grid.ColumnSpan="3" Grid.RowSpan="3"/>
        
        <!--NIVEL 1-->
        <StackPanel VerticalAlignment="Bottom" Spacing="10" 
                    Margin="100,0,0,0" HorizontalAlignment="Left">
            <Image Source="../Assets/pirulos.png" Height="150" Width="150"/>
            <Button x:ConnectionId='8' Content="Pasillo 1" CornerRadius="20" 
                    FontSize="30" FontFamily="MV Boli"
                    FontWeight="Bold"
                                        />
        </StackPanel>
        <!--NIVEL 2-->
        <StackPanel VerticalAlignment="Bottom" Grid.Column="1" 
                    Grid.RowSpan="2"  HorizontalAlignment="Left"
                    Margin="60,0,0,0" Spacing="10">
            <Image Source="../Assets/pirulos.png" Height="150" Width="150"/>
            <Button Content="Pasillo 2" CornerRadius="20" 
                FontSize="30" FontFamily="MV Boli"
                FontWeight="Bold"
                IsEnabled="False"/>
        </StackPanel>
        <!--NIVEL 3-->
        <StackPanel  Grid.Column="2" Grid.RowSpan="2" Spacing="10"
                     VerticalAlignment="Bottom"
                     HorizontalAlignment="Left"
                     Margin="100,0,0,50">
            <Image Source="../Assets/pirulos.png" Height="150" Width="150"/>
            <Button Content="Pasillo 3" CornerRadius="20" 
                FontSize="30" FontFamily="MV Boli"
                FontWeight="Bold"
                VerticalAlignment="Top" 
                IsEnabled="False"/>
        </StackPanel>
        <!--NIVEL 4-->
        <StackPanel  Grid.Column="2" Grid.Row="2"  Spacing="10"
                     VerticalAlignment="Bottom"
                     HorizontalAlignment="Center">
            <Image Source="../Assets/pirulos.png" Height="150" Width="150"/>
            <Button Content="Pasillo 4" CornerRadius="20" 
                FontSize="30" FontFamily="MV Boli"
                FontWeight="Bold" 
                Margin="0,0,0,50"
                IsEnabled="False"/>
        </StackPanel>


        <StackPanel x:ConnectionId='2' Grid.ColumnSpan="3" Grid.RowSpan="3"
                    Background="LightPink" Height="400"
                    Width="650" Spacing="15"
                    x:Name="MenuIniciarBatalla" Visibility="Collapsed">
            <TextBlock Text="Iniciar Batalla" VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="40" Foreground="White"/>
            <TextBlock Text="¿Deseas comenzar la batalla?" VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="30" Foreground="White"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,180,0,0"
                        Spacing="15" HorizontalAlignment="Center">
                <Button x:ConnectionId='6' Background="HotPink" Content="SI" FontSize="40" 
                        Width="300" Height="80"
                        CornerRadius="10"                       />
                <Button x:ConnectionId='7' Background="HotPink" Content="NO" FontSize="40" 
                        Width="300" Height="80"                       
                        CornerRadius="10"/>
            </StackPanel>
        </StackPanel>

        <StackPanel x:ConnectionId='3' Grid.ColumnSpan="3" Grid.RowSpan="3"
                    Background="LightPink" Height="400"
                    Width="650" Spacing="15"
                    x:Name="MenuElegitBando" Visibility="Collapsed">
            <TextBlock Text="Elige Bando" VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="40" Foreground="White"/>
            <TextBlock Text="¿En qué bando te gustaría luchar?" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="30" Foreground="White"/>

            <StackPanel Orientation="Horizontal" Margin="0,180,0,0"
                        Spacing="15" HorizontalAlignment="Center">
                <Button x:ConnectionId='4' Background="HotPink" Content="Con Azucar" FontSize="40" 
                        Width="300" Height="80"                       
                        CornerRadius="10"/>
                <Button x:ConnectionId='5' Background="HotPink" Content="Sin Azucar" FontSize="40" 
                        Width="300" Height="80"                       
                        CornerRadius="10"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>

