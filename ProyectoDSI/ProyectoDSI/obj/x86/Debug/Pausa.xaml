<Page
    x:Class="ProyectoDSI.Pausa"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoDSI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:ConnectionId='2' x:Name="butonPause" TargetType="Button">
            <Setter Property="BorderThickness" Value="5" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Grid.Column" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Background" Value="#FFFFA834"/>
            <Setter Property="CornerRadius" Value="20"/>
        </Style>
        <ResourceDictionary x:Key="lightt">
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ButtonBackground" Color="MediumOrchid"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="DeepSkyBlue"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Blue"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="#f6a2bf">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Pausa" FontSize="72" Foreground="DeepPink"
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Center" 
                   Margin="0,80,0,0" 
                   FontStyle="Italic" FontWeight="Bold" FontFamily="Fascinate Inline" Height="86" Width="202" Grid.Column="1"/>
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="25" >
            <Button  Style="{StaticResource butonPause}">
                <SymbolIcon Symbol="Play" Width="200" Height="200" Foreground="#e93578"
                            VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button x:ConnectionId='3' x:Name="MainMenu" Style="{StaticResource butonPause}"                       >
                <SymbolIcon Symbol="Home" Width="200" Height="200" Foreground="#e93578"
                            VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button x:ConnectionId='4' x:Name="Settings" Style="{StaticResource butonPause}"                       >
                <SymbolIcon Symbol="Setting" Width="200" Height="200" Foreground="#e93578"
                            VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
        </StackPanel>
        <Image Source="Assets/piruleta.png"/>
        <Image  Grid.Column="2" Source="Assets/piruleta.png"/>
    </Grid>
</Page>

