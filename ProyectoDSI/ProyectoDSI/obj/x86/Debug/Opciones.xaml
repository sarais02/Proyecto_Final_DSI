<Page
    x:Class="ProyectoDSI.Opciones"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoDSI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:ConnectionId='2' TargetType="Slider" x:Name="slidersUI">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Yellow"/>
            <Setter Property="Foreground" Value="Orange"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="Value" Value="50"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="50"/>
        </Style>
        <Style x:ConnectionId='3' TargetType="StackPanel" x:Name="optionstackPanel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Spacing" Value="40"/>
            <Setter Property="Width" Value="650"/>
            <Setter Property="Height" Value="90"/>
            <Setter Property="Orientation" Value="Horizontal"/>
        </Style>
    </Page.Resources>
    <Grid x:ConnectionId='4' Background="#f6a2bf"                        >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Opciones" FontSize="72" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Center" 
                   Margin="0,80,0,0" 
                   FontStyle="Italic" FontWeight="Bold" FontFamily="Fascinate Inline" Height="86" Width="307" Grid.Column="1"/>
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Spacing="50" Height="400" Width="700" Grid.Column="1" >

            <StackPanel Style="{StaticResource optionstackPanel}" >
                <TextBlock x:ConnectionId='7' VerticalAlignment="Center" Text="Volumen" FontSize="30" Foreground="HotPink"
                           FontWeight="Bold" FontFamily="Fascinate Inline"                                              />
                <Slider Style="{StaticResource slidersUI}" />
                <SymbolIcon Symbol="Audio" Foreground="DeepPink"/>
            </StackPanel>
            <StackPanel Style="{StaticResource optionstackPanel}" >
                <TextBlock VerticalAlignment="Center" Text="Brillo" FontSize="30" Foreground="HotPink"
                           FontWeight="Bold" FontFamily="Fascinate Inline" />
                <Slider Style="{StaticResource slidersUI}" />
                <SymbolIcon Symbol="Audio" Foreground="DeepPink"/>
            </StackPanel>
            <StackPanel Style="{StaticResource optionstackPanel}">
                <TextBlock VerticalAlignment="Center" Text="Lenguaje" FontSize="30" Foreground="HotPink"
                           FontWeight="Bold" FontFamily="Fascinate Inline" />
                <ComboBox PlaceholderText="Selecciona Un Idioma" 
                          Width="200"
                          VerticalAlignment="Center">
                    <x:String>Español</x:String>
                    <x:String>Ingles</x:String>
                </ComboBox>
            </StackPanel>
        </StackPanel>
        <Image  Grid.Column="0" Source="Assets/nuve.png"  />
        <Image  Grid.Column="2" Source="Assets/nuve.png"  />

        <Button x:ConnectionId='5' x:Name="Reglas" Content="Reglamento" FontSize="30"
                Grid.Column="1" VerticalAlignment="Bottom" 
                Height="96" Width="209" Background="#FFFFA834" CornerRadius="10"
                                     Margin="252,0,0,199" FontFamily="MV Boli"/>
        <Button x:ConnectionId='6' x:Name="Pause" Content="Controles" FontSize="30"
                Grid.Column="1" Margin="252,848,0,0" VerticalAlignment="Top" 
                Height="96" Width="209" FontFamily="MV Boli" Background="#FFFFA834"
                 CornerRadius="10"                    />
    </Grid>
</Page>

