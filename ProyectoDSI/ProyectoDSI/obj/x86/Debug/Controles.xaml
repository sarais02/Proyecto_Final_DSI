<Page
    x:Class="ProyectoDSI.Controles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoDSI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >
    <Page.Resources>
        <Style x:ConnectionId='2' TargetType="TextBlock" x:Name="controles">
            <Setter Property="FontFamily" Value="MV Boli"/>
            <Setter Property="FontSize" Value="32"/>
        </Style>
        <ResourceDictionary x:Key="lightt">
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ButtonBackground" Color="MediumOrchid"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="DeepSkyBlue"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Blue"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid x:ConnectionId='3' Background="#f6a2bf"                       >
        <Grid.ColumnDefinitions >
            <ColumnDefinition  Width="*"/>
            <ColumnDefinition  Width="*"/>
        </Grid.ColumnDefinitions>
        <!--<Image Source="Assets/raya.png" VerticalAlignment="Top" HorizontalAlignment="Left" Height="582" Width="313" Grid.ColumnSpan="2" Margin="594,240,0,0"/>-->
        <TextBlock VerticalAlignment="Top"
                   Text="CONTROLES" 
                   HorizontalAlignment="Center"
                   FontSize="70"                 
                   Foreground="Gold" FontFamily="Bauhaus 93" Height="102" Width="404" Grid.ColumnSpan="2" Margin="20" />
        <TextBlock VerticalAlignment="Top"
                   Text="CONTROLES" 
                   HorizontalAlignment="Left"
                   FontSize="70"
                   Margin="750,20,0,0"
                   Foreground="HotPink" FontFamily="Bauhaus 93" 
                   Height="102" Width="404" Grid.ColumnSpan="2"  />
        <StackPanel Orientation="Horizontal" Spacing="20" Margin="20">
            <Image Source="Assets/controles1.png"
                   Height="400" Width="300"/>
            <StackPanel VerticalAlignment="Bottom" Spacing="20" >
                <TextBlock Text="-Seleccionar Direccion" Style="{StaticResource controles}"/>
                <TextBlock Text="-Mover Al Personaje" Style="{StaticResource controles}"/>
                <TextBlock Text="-Menu Pausa" Style="{StaticResource controles}" Margin="0,156,206,0" Width="225"/>
                <TextBlock Text="-Sleccionar" Style="{StaticResource controles}" Margin="0,100,206,147"/>
            </StackPanel>

            <TextBlock Text="-Sleccionar" Style="{StaticResource controles}" Margin="336,801,206,147"/>

        </StackPanel>
        <Image Source="Assets/cursor.png" Width="80" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="132,755,0,0" Height="77"/>
        <Image Source="Assets/mando.png" Grid.Column="1" Margin="117,102,117,99" />
        <Image Source="Assets/controles2.png" Grid.Column="1" Margin="93,80,49,99" />
        <Button x:ConnectionId='4' x:Name="volver" VerticalAlignment="Bottom" Content="Volver" FontFamily="MV Boli" FontSize="32" 
                Background="#FFFFA834" CornerRadius="10" Grid.ColumnSpan="2" HorizontalAlignment="Center" 
                Width="200" Height="59"                      Margin="30"/>


    </Grid>
</Page>

